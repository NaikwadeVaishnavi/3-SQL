select * from customer

----calaculate length of string
select length (first_name) from customer

--concate string
select first_name || last_name from customer

--convert upper
select upper(first_name) from customer

--convert lower
select lower(last_name ) from customer

select left(first_name,1) || last_name || '@gamil.com' from customer

select lower(left(first_name,2)) || last_name || '@gamil.com' as customer_email from customer